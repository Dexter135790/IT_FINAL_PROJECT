      <!-- heading  -->
      <span class="bg-dark text-white p-4 rounded-3 text-center mb-5 d-inline-block shadow-lg">
        ACTIVITIES
      </span>

      <div class="h-75">
        <div class="row mt-5 h-50">
          <div class="col  mt-2 p-2 me-2 rounded-3 shadow-lg" style="background-color: #22283177;">
            <h5 class="text-white pt-5">JOBS COMPLETED</h5>
            <div class="m-5 p-2">
              <h1 class="display-1">89</h1>
            </div>
          </div>
          <div class="col  mt-2  p-2 rounded-3 shadow-lg" style="background-color: #22283177;">
            <h5 class="text-white pt-5">JOBS ACTIVE</h5>
            <div class="m-5 p-2">
              <h1 class="display-1">3</h1>
            </div>
          </div>
        </div>
      
        <div class="row mt-5 h-50">
          <div class="col  mt-2 p-2 me-2 rounded-3 shadow-lg" style="background-color: #22283177;">
            <h5 class="text-white pt-5">JOBS APPLIED</h5>
            <div class="m-5 p-2">
              <h1 class="display-1">10</h1>
            </div>
          </div>
          <div class="col  mt-2 p-2 me-2 rounded-3 shadow-lg" style="background-color: #22283177;">
            <h5 class="text-white pt-5">TOTAL JOBS</h5>
            <div class="m-5 p-2">
              <h1 class="display-1">100</h1>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- For personal info container  -->
    <div class="container rounded m-3 p-5 shadow text-center" style="background-color: #eeeeeea0; font-family: Julee;">
      <!-- Heading  -->
      <span class="bg-dark text-white p-4 rounded-3 text-center d-inline-block mb-5 shadow-lg">
        TASKERS INFORMATION
      </span>

      <!-- Image of tasker  -->
      <div class="m-5">
        <img src="images/profilepic.jpg" alt="" height="200px" width="200px" class="rounded-circle shadow-lg">
      </div>

      <!-- taskers info  -->
      <div class="d-flex flex-wrap flex-column mt-3 align-content-around h-50">
        <div class="text-center p-3">Name: xxxx</div>
        <div class="text-center p-3">Email: xxx@xxx.com</div>
        <div class="text-center p-3">Contact Number: xxxxxxxxxx</div>
        <div class="text-center p-3">Working City: xxxx</div>
        <div class="text-center p-3">Highlighting Skills: xxxx</div>
        <div class="text-center p-3">Description about yourself: xxxx</div>
        <div class="text-center p-3">Resume: <a href="#">File.pdf</a></div>
      </div>
    </div>

  </div>



