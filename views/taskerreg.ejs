<%- include("headernav") -%>

<!-- sign up form whole page  -->
<div class="vh-100 container border mt-5 p-5" id="bd">

    <!-- sign up form block  -->
    <div class="container w-50">

    <h1 class="text-center text-white p-5" style="font-family: Julee;">SIGN UP FOR TASKERS</h1>

    <!-- form starting -->
    <form action="/taskerReg" class="needs-validated" method="post" onsubmit="return validateForm()">

        <!-- for username -->
        <div class="mb-3 mt-3">
            <div class="input-group mb-3">
                <span class="input-group-text">Name</span>
                <input type="text" class="form-control" placeholder="First Name" name="fname" required>
                <input type="text" class="form-control" placeholder="Last Name" name="lname" required>
              </div>
              
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <!-- for email  -->
        <div class="mb-3 mt-2">
            <div class="input-group mb-3">
                <span class="input-group-text">Email</span>
                <input type="text" class="form-control" placeholder="Email" name="email" required>
              </div>
              
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <!-- FOR CONTACT NUMBER  -->
        <div class="mb-4">
         <div class="input-group mb-3">
            <span class="input-group-text">Contact number</span>
             <input type="text" class="form-control" placeholder="Contact Number" name="contactNumber" required>
          </div>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <!-- active city -->
        <div class="mb-4">
          <div class="input-group mb-3">
             <span class="input-group-text">City</span>
              <input type="text" class="form-control" placeholder="Your Active City" name="city" required>
           </div>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
         </div>

        <!-- for password  -->
        <div class="mb-4">
            <div class="input-group mb-3">
                <span class="input-group-text">Password</span>
                <input type="password" class="form-control" placeholder="Password" name="pswd" id="pswd" required>
              </div>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <!-- Re-enter password  -->
        <div class="mb-4">
          <div class="input-group mb-3">
              <span class="input-group-text">Re-enter Password</span>
              <input type="password" class="form-control" placeholder="Re-enter Password" name="re_pswd" id="re_pswd" required>
            </div>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <!-- Upload resume form  -->
        <div class="form-group">
          <label for="exampleFormControlFile1">Resume here: </label>
          <input type="file" class="form-control-file" id="exampleFormControlFile1" name="resume" required>
        </div>

        <!-- Checkbox for terms and conditions  -->
        <div class="form-check mb-3 mt-3">
          <input class="form-check-input" type="checkbox" id="myCheck" name="remember" required>
          <label class="form-check-label" for="myCheck">Accept the terms and conditions.</label>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Check this checkbox to continue.</div>
        </div>

        <!-- Submit button  -->
        <div class="d-grid rounded-5">
          <button type="submit" class="btn btn-dark btn-block">Submit</button>
        </div>


      </form>
    </div>

    </div>


    <!-- Validating password and re-enter password entries -->
    <script>
      function validateForm() {
        var password = document.getElementById("pswd").value;
        var confirmPassword = document.getElementById("re_pswd").value;
        if (password != confirmPassword) {
          alert("Passwords do not match.");
          return false;
        }
        return true;
      }
    
      document.querySelector("form").addEventListener("submit", function(event) {
        if (!validateForm()) {
          event.preventDefault();
        }
      });
    </script>
    


    
    
  
